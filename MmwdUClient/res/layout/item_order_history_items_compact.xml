<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_transparent_to_half"
    android:paddingLeft="@dimen/small_margin"
    android:paddingRight="@dimen/small_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/order_item_time"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_weight="2.2"
            android:text="04-10 20:00" />

        <TextView
            android:id="@+id/order_item_mm_shop_names"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:text="XXXXXXXXXXXXX"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/order_item_food_names"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_item_status"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_weight="1.5"
            android:text="已完成" />

        <TextView
            android:id="@+id/order_item_total_money"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="13.00"
            android:textColor="@color/main_color" />
    </LinearLayout>

    <View
        android:id="@+id/order_item_dash_divider_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dash_line_orange"
        android:layerType="software" />

</LinearLayout>