<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zone_order_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_pink_with_pink_border" >
<LinearLayout 
    android:id="@+id/order_settlemetn_select_zone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent_to_half"
    android:padding="8dp"
    android:layout_centerInParent="true"
    android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/order_settlement_select_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/checkbox_uncheck_normal"  />
        </LinearLayout>
    </RelativeLayout>

<LinearLayout
    android:id="@+id/order_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_no_top_border" />
</LinearLayout>